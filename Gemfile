source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'
# Defattened Rails
gem 'rails-api'

# Use MongoDB for the database
gem 'mongoid'

# Capybara for scraping
gem 'capybara'
gem 'capybara-mechanize'

group :test, :development do 
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'pry-rails'
end